{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "extension-dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["background/**/*.ts", "content-scripts/**/*.ts", "popup/**/*.tsx", "options/**/*.tsx", "lib/**/*.ts"],
  "exclude": ["node_modules"]
}
